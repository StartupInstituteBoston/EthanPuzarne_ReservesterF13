
<div class="container">
	<div class='row'>
		<div class='col-md-4'>
			<div class="form-group">
				<%= form_for @restaurant, :html => {:class => "form-horizontal", :role=>'form', :multipart => true} do |f| %>
				<div class="form-group"><%= f.label "Name:", :class=>'control-label' %>  <%= f.text_field :name, placeholder:'Name', :class=>'form-control'%></div>
				<div class="form-group"><%= f.label "Description:", :class=>'control-label' %>  <%= f.text_area :description, placeholder:'Tell us about yourself', :class=>'form-control' %></div>
				<div class="form-group"><%= f.label "Address:", :class=>'control-label' %> <%= f.text_field :street, placeholder: 'Number and Street', :class=>'form-control'%></div>
				<div class="form-group"><%= f.label "City:", :class=>'control-label' %> <%= f.text_field :city, placeholder: 'City', :class=>'form-control'%></div>
				<div class="form-group"><%= f.label "State:", :class=>'control-label' %> <%= f.text_field :state, placeholder: 'State', :class=>'form-control' %></div>
				<div class="form-group"><%= f.label "Zip Code:", :class=>'control-label' %> <%= f.text_field :zip, placeholder: '00000', :class=>'form-control' %></div>
				<div class="form-group"><%= f.label "Phone Number:", :class=>'control-label' %> <%= f.text_field :phone, placeholder: 'xxxxxxxxxx', :class=>'form-control' %></div>
				<div class="form-group"><%= f.label "Upload a file", :class=>'control-label' %><%= f.file_field :photo, :class=>'form-control' %></div>
				<div class="form-group"><%= f.button :class=>'form-control btn btn-default' %></div>
				<% end %>
			</div>
		</div>
	</div>
</div>
